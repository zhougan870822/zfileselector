<?xml version="1.0" encoding="utf-8"?>
<com.zhoug.widgets.viewgroup.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fileselector_picture_item_bg"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:ratioHeight="1"
    app:ratioWidth="1"
    app:sure="SureWidth"
    >

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/fileselector_white"
        />
    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/fileselector_icon_camera"
        android:layout_above="@id/tv_camera"
        android:layout_centerHorizontal="true"

        />
</com.zhoug.widgets.viewgroup.SquareLayout>