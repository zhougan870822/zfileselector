<?xml version="1.0" encoding="utf-8"?>
<com.zhoug.widgets.viewgroup.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fileselector_picture_item_bg"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:ratioHeight="1"
    app:ratioWidth="1"
    app:sure="SureWidth">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/fileselector_icon_audio"

        />

    <LinearLayout
        android:id="@+id/icon_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fileselector_bg_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"

        >

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/fileselector_picture_video"

            />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/fileselector_white"
            android:textSize="12sp"
            tools:text="00:00" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/fileselector_picture_uncheck" />


</com.zhoug.widgets.viewgroup.SquareLayout>